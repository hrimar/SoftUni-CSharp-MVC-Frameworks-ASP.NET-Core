@page 
@model MyLibrary.Pages.Books.AddModel



@{
    ViewData["Title"] = "Add";
}

<h2>Add Book</h2>

<form method="post">
    <div class="form-group row">
        <label asp-for="Title" @*for="title" *@ class="col-sm-2 col-sm-offset-1 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Title" type="text" class="form-control" @*id="title" *@ placeholder="Title">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Description"  *@ class="col-sm-2 col-sm-offset-1 col-form-label">@*Description*@</label>
        <div class="col-sm-10">
            <textarea asp-for="Description" type="text" class="form-control" placeholder="Description"></textarea>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Author" @*for="author" *@ class="col-sm-2 col-sm-offset-1 col-form-label">Author</label>
        <div class="col-sm-10">
            <input asp-for="Author" type="text" class="form-control" @*id="author" *@ placeholder="Author">
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="ImageUrl" @*for="imageUrl" *@ class="col-sm-2 col-sm-offset-1 col-form-label">@*Image URL*@</label>
        <div class="col-sm-10">
            <input asp-for="ImageUrl" type="text" class="form-control" @*id="imageUrl" *@ placeholder="Image URL">
        </div>
    </div>
    <div class="form-group row col-sm-4 offset-2">
        @*<input type="submit" value="Add book" class="btn-success" />*@
        <input asp-page-handler="CreateBook" type="submit" value="Add book" class="btn btn-success"/>

        <a href="/" class="btn btn-outline-dark offset-2">Cancel</a>
    </div>
</form>

