@page  "{id}"
@model MyLibrary.Pages.Books.ReturnModel
@{
    ViewData["Title"] = "Return";
}

<h2>Return the book</h2>


<form method="post">
    <div class="form-group row">
        <label asp-for="BorrowerId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            @Html.DropDownList("BorrowerId", Model.Borrowers, null, new { @class = "form-control" })
            <span class="text-danger" asp-validation-for="BorrowerId"></span>

            <p>If you are not registered as borrower -> <a href="/Borrowers/Add">Register a borrower</a></p>
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="EndDate" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="EndDate" class="form-control" />
            <span class="text-danger" asp-validation-for="EndDate"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-sm-10 offset-2">
            <input type="submit" value="Return" class="btn btn-success" />
        </div>
    </div>
</form>


