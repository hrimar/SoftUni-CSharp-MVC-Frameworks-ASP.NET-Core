@page "{id:int}"
@model DetailsModel

<h2>Details for course instance: @Model.Name</h2>
<br />
<div class="text-center">
    <a asp-area="Identity" asp-controller="CourseInstances" asp-action="Enroll" asp-route-id="@Model.Id"
       class="btn-lg btn-success">Enroll</a>
    <br />
    <br />
    <div><strong>Course Instance Name:  @Model.Name </strong></div>
    <br />
    <div>Description: @Model.Description</>    </div>
    <br />
    <div>Course start date: @Model.StartDate</div>
    <br />
    <div>Course end date:@Model.EndDate</>  </div>
</div>

<br />
<h3>All lectures for this course:</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order</th>
            <th>Title</th>
            <th>Lector Hall</th>
            <th>Description</th>
            <th>Starts</th>
            <th>Ends</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var lectore in Model.Lectures)
            {
                <tr>
                    <td>@lectore.Order</td>
                    <td>@lectore.Title</td>
                    <td>@lectore.LectureHall </td>
                    <td>@lectore.Description        </td>
                    <td>@lectore.StartTime              </td>
                    <td>@lectore.EndTime</td>
                </tr>
            }
        }
    </tbody>
</table>

@{int order = 1; }
<br />
<h3>All students for this course:</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var student in Model.Students)
            {
                <tr>
                    <td>@order</td>
                    <td>@student.FullName</td>
                </tr>
                order++;
            }
        }
    </tbody>
</table>