@model UserShortViewModel

<tr>
    <td>@Model.UserName</td>
    <td>@Model.Email</td>
    <td>
    <form>
        <input type="checkbox" asp-for="IsLecturer">
    </form>
        @*@Html.DisplayFor(model => model.IsLecturer)*@
    </td>  @*for CHEckBOX*@

    <td>        
        @Html.DisplayFor(model => model.IsAdmin)
    </td>
    <td>
        @{
            if (this.User.IsInRole("Lecturer"))
            {
                <a asp-area="Lecturer" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-default">Details</a>
            }
            else if (this.User.IsInRole("Administrator"))
            {
                <a asp-area="Admin" asp-controller="Users" asp-action="Details" asp-route-id="@Model.Id"
                   class="btn btn-default">Details</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="MakeLecturer" asp-route-id="@Model.Id"
                   class="btn btn-primary">Make Lecturer</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="ChangePassword" asp-route-id="@Model.Id"
                   class="btn btn-warning">Change Password</a>
                <a asp-area="Admin" asp-controller="Users" asp-action="Ban" asp-route-id="@Model.Id"
                   class="btn btn-danger">Ban</a>
            }            
        }

    </td>
</tr>