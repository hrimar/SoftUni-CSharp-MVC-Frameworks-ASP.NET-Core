@model SoftUniClone.ServiceModels.Lecturer.ViewModels.CourseDetailsViewModel
@{
    ViewData["Title"] = "Details";
}

<h2>Details for course: @Model.Name</h2>

<a asp-area="Admin" asp-controller="CourseInstances" asp-action="Create" asp-route-id="@Model.Id"
   class="btn btn-success">
    <i class="glyphicon glyphicon-plus"></i> Create instance
</a>

@if (!Model.Instances.Any())
{
    <div>
        No instances yet.
        <a asp-area="Admin"
           asp-controller="CourseInstances"
           asp-action="Create"
           asp-route-id="@Model.Id">
            Create the first instance
        </a>
    </div>
}

@*<ul>
        @Html.DisplayFor(m => m.Instances)
    </ul>*@
@foreach (var i in Model.Instances.OrderByDescending(i => i.StartDate))
{
    <div>
        <a asp-area="Lecturer" asp-controller="CourseInstances" asp-action="Details"
           asp-route-id="@i.Id" class="col-lg-12 col-lg-offset-1">@i.Name</a>
        <br />
    </div>
}  