@model SoftUniClone.ServiceModels.Lecturer.ViewModels.CourseInstanceViewModel
@{
    ViewData["Title"] = "Details for course instance";
}
<h2 class="text-center">   Details for course instance: @Model.Name</h2>

@*<a asp-area="Admin" asp-controller="CourseInstances" asp-action="Create" asp-route-id="@Model.Id"
       class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i> Create instance
    </a>*@

<br />
<div class="text-center">
    <br />
    <div><strong>Course Name:  @Model.Name </strong></div>
    <div>Description: @Model.Description</>    </div>
    <div>Course start date: @Model.StartDate</div>
    <div>Course end date:@Model.EndDate</>  </div>

    <br />
    <div class="text-center">
        <a asp-area="Lecturer" asp-controller="CourseInstances" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success">
            @*<i class="glyphicon glyphicon-plus"></i>*@ Edit this course instance
        </a>
    </div>


</div>


<br />
<h3>All lectures for this course:</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order</th>
            <th>Title</th>
            <th>Lector Hall</th>
            <th>Description</th>
            <th>Starts</th>
            <th>Ends</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var lectore in Model.Lectures)
            {
                <tr>
                    <td>@lectore.Order</td>
                    <td>@lectore.Title</td>
                    <td>@lectore.LectureHall </td>
                    <td>@lectore.Description        </td>
                    <td>@lectore.StartTime              </td>
                    <td>@lectore.EndTime</td>
                </tr>
            }
        }
    </tbody>
</table>

@{int order = 1; }
<br />
<h3>All students for this course:</h3>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order</th>
            <th>Name</th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach (var student in Model.Students)
            {
                <tr>
                    <td>@order</td>
                    <td>@student.FullName</td>
                </tr>
                order++;
            }
        }
    </tbody>
</table>



