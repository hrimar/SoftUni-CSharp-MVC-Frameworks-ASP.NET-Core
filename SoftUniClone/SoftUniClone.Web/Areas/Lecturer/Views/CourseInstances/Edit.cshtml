@model InstanceEditingBindingModel
@{
    ViewData["Title"] = "Edit";
}

<h2>Edit instance @Model.Name</h2>

<form asp-area="Lecturer" asp-controller="CourseInstances" asp-action="Edit" asp-route-id="@Model.Id" class="form-horizontal">

    @Html.EditorForModel()
        
    <div class="form-group row">
        <div class="col-sm-10 col-sm-push-2">
            @*<button type="submit" class="btn btn-primary">Edit</button>*@
            <input type="submit" value="Edit" class="btn btn-success" />
        </div>
    </div>
</form>

<div class="text-center">
    <a asp-area="Lecturer" asp-controller="Lectures" asp-action="Add" asp-route-id="@Model.Id" class="btn btn-success">
        <i class="glyphicon glyphicon-plus"></i> Add new lecture
    </a>
</div>
    @Html.DisplayFor(model => model.Lecturers)